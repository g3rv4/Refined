{
    "manifest_version": 2,
    "name": "BetterSlack - Slack can be better",
    "description": "Chrome extension to tweak Slack",
    "version": "1.2.0",
    "options_ui": {
        "page": "options.html",
        "chrome_style": true
    },
    "browser_action": {
        "default_popup": "options.html",
        "default_icon": {
            "128": "images/icon128.png",
            "48": "images/icon48.png",
            "16": "images/icon16.png"
        }
    },
    "icons": {
        "128": "images/icon128.png",
        "48": "images/icon48.png",
        "16": "images/icon16.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://*.slack.com/*"
            ],
            "js": [
                "background.js"
            ],
            "run_at": "document_start"
        }
    ],
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "permissions": [
        "storage",
        "tabs",
        "https://*.slack.com/*"
    ]
}